{
  "extends": "./configs/tsbase",
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "files": [
    "javascript/script.ts",
    "javascript/components/vocab.ts",
    "javascript/components/button.ts"
  ]
}
